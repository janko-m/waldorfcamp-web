!!!
%html.no-js{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title #{@title} Â· Waldorf Camp
    %meta{http_equiv: "X-UA-Compatibile", content: "IE=edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{rel: "authors", href: "humans.txt"}
    = favicon_link_tag
    = stylesheet_link_tag "application"
    = render "javascript"
    = csrf_meta_tags

  %body{class: "l-page-#{params[:controller]} l-page-#{params[:controller]}-#{params[:action]}"}
    = render "navigation"
    = render "sub_navigation"
    - if params[:controller] == "pages" and params[:action] == "index"
      = render "hero-unit"

    .l-main{role: "main"}
      .l-container
        -# = render "color_scheme"
        = yield

    = render "footer"

    = javascript_include_tag "application"
