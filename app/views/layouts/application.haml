!!!
%html.no-js{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title #{@title} Â· Waldorf Camp
    %meta{http_equiv: "X-UA-Compatibile", content: "IE=edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{rel: "authors", href: "humans.txt"}
    = stylesheet_link_tag "application"
    = favicon_link_tag
    = render "js"
    = render "webfonts"
    = render "analytics"
    = csrf_meta_tags

  %body{class: "page-#{params[:controller]} page-#{params[:controller]}-#{params[:action]}"}
    = render "navigation"
    = render "navigation_sub"

    - if params[:controller] == "pages" and params[:action] == "index"
      = render "jumbotron"

    %main.main{role: "main"}
      .container
        -# = render "color_scheme"
        = yield

    = render "footer"

    = javascript_include_tag "application"
